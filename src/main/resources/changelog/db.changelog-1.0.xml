<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="ojas.agashe@gmail.com">
        <comment>User tables</comment>
<!--        precondition-->
        <createTable tableName="app_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)"/>
            <column name="type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="account_activated" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="students">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_student_app-user" references="app_users(id)" />
            </column>
            <column name="school" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="grade" type="varchar(50)"/>
        </createTable>

        <createTable tableName="mentors">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_mentor_app-user" references="app_users(id)" />
            </column>
            <column name="gender" type="varchar(25)"/>
            <column name="location" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="ojas.agashe@gmail.com">
        <comment>Organization and Org User tables</comment>
        <createTable tableName="org_users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" foreignKeyName="fk_org_users-app_users" references="app_users(id)" />
            </column>
            <column name="phone_number" type="varchar(25)"/>
        </createTable>

        <createTable tableName="organizations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="org_logo" type="varchar(500)"/>
            <column name="social_media_code" type="varchar(50)"/>
            <column name="social_media_link" type="varchar(250)"/>
            <column name="website" type="varchar(100)"/>
            <column name="is_verified" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="subscription" type="varchar(50)"/>
            <column name="org_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="ojas.v.agashe@gmail.com">
        <comment>Creating Program related tables</comment>
        <createTable tableName="programs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(250)"/>
            <column name="description" type="TEXT"/>
            <column name="tentative_start_date" type="varchar(50)"/>
            <column name="duration_in_months" type="SMALLINT"/>
            <column name="mode" type="varchar(25)"/>
            <column name="language_requirements" type="varchar(500)"/>
            <column name="student_age_from" type="TINYINT"/>
            <column name="student_age_to" type="TINYINT"/>
            <column name="program_link" type="varchar(250)"/>
            <column name="coordinator_name" type="varchar(100)"/>
            <column name="coordinator_email" type="varchar(50)"/>
            <column name="coordinator_phone_extension" type="varchar(10)"/>
            <column name="coordinator_phone_number" type="varchar(25)"/>
        </createTable>

        <createTable tableName="program_student_fields">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="program_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_program_student_fields" references="programs(id)"/>
            </column>
            <column name="subject_requirements" type="varchar(500)"/>
            <column name="openings" type="SMALLINT"/>
            <column name="apply_by" type="varchar(50)"/>
            <column name="is_paid" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="program_fees" type="DECIMAL(10,2)"/>
            <column name="instructions" type="TEXT"/>
        </createTable>

        <createTable tableName="program_mentor_fields">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="program_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_program_mentor_fields" references="programs(id)"/>
            </column>
            <column name="subject_requirements" type="varchar(500)"/>
            <column name="openings" type="SMALLINT"/>
            <column name="apply_by" type="varchar(50)"/>
            <column name="instructions" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="ojas.v.agashe@gmail.com">
        <comment>Creating Profile related tables</comment>
        <createTable tableName="org_profile">
            <column name="id" type="BIGINT" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="work_description" type="TEXT"/>
            <column name="location_country" type="varchar(50)"/>
            <column name="location_region" type="varchar(50)"/>
            <column name="contact_email" type="varchar(25)"/>
            <column name="contact_phone_country_name" type="varchar(50)"/>
            <column name="contact_phone_country_code" type="varchar(50)"/>
            <column name="contact_phone_number" type="varchar(50)"/>
            <column name="primary_language" type="varchar(25)"/>
            <column name="inception_year" type="varchar(10)"/>
        </createTable>

        <createTable tableName="user_profile">
            <column name="id" type="BIGINT" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_type" type="varchar(25)"/>
            <column name="birth_year" type="varchar(10)"/>
            <column name="organization" type="varchar(50)"/>
            <column name="primary_language" type="varchar(25)"/>
            <column name="gender" type="varchar(30)"/>
            <column name="stable_connection" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="mentor_qualification" type="varchar(250)"/>
            <column name="mentor_profession" type="varchar(250)"/>
            <column name="mentor_previously_mentored" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="student_previously_mentored" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="primary_device" type="varchar(30)"/>
            <column name="location_country" type="varchar(50)"/>
            <column name="location_region" type="varchar(50)"/>
            <column name="contact_email" type="varchar(25)"/>
            <column name="contact_phone_country_name" type="varchar(50)"/>
            <column name="contact_phone_country_code" type="varchar(50)"/>
            <column name="contact_phone_number" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="ojas.v.agashe@gmail.com">
        <comment>Adding fields to app_users and user_profile tables</comment>
        <addColumn tableName="app_users">
            <column name="account_verified" type="BOOLEAN" defaultValueBoolean="false"></column>
            <column name="profile_created" type="BOOLEAN" defaultValueBoolean="false"></column>
        </addColumn>
        <addColumn tableName="user_profile">
            <column name="mentor_experience_in_years" type="SMALLINT"></column>
        </addColumn>
    </changeSet>

    <changeSet id="6" author="ojas.v.agashe@gmail.com">
        <comment>Adding org field in program tables</comment>
        <addColumn tableName="programs">
            <column name="org_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_program_organization" references="organizations(id)"/>
            </column>
            <column name="status" type="varchar(30)"/>
            <column name="coordinator_phone_country_name" type="varchar(50)"/>
        </addColumn>
            <renameColumn tableName="programs" columnDataType ="varchar(10)" oldColumnName="coordinator_phone_extension" newColumnName="coordinator_phone_country_code"/>
    </changeSet>

    <changeSet id="7" author="ojas.v.agashe@gmail.com">
        <comment>Adding program invitation tables</comment>
        <createTable tableName="program_invitations">
            <column name="id" type="BIGINT" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="program_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="invitation_details_id" type="BIGINT" >
                <constraints nullable="false" foreignKeyName="fk_program_invitation_details_fields" references="program_invitation_details(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_program_invitation_users_fields" references="app_users(id)"/>
            </column>
            <column name="name" type="varchar(25)"/>
            <column name="email_id" type="varchar(25)"/>
            <column name="user_type" type="varchar(10)"/>
            <column name="sent_at" type="varchar(50)"/>
            <column name="response_status" type="varchar(10)"/>
        </createTable>
        <createTable tableName="program_invitation_details">
            <column name="id" type="BIGINT" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="subject" type="varchar(250)"/>
            <column name="message" type="TEXT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>